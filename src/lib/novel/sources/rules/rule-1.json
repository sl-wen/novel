{
  "id": 1,
  "name": "笔趣阁",
  "baseUrl": "https://www.xbiquge.la",
  "encoding": "utf-8",
  "searchRule": {
    "url": "https://www.xbiquge.la/search.php?keyword={keyword}",
    "list": "#search-results .result-item",
    "item": {
      "title": "h3.title a",
      "author": ".author",
      "link": "h3.title a",
      "latest": ".update"
    }
  },
  "bookRule": {
    "title": "#info h1",
    "author": "#info p:first",
    "intro": "#intro",
    "cover": "#fmimg img",
    "chapters": {
      "list": "#list dd",
      "item": {
        "title": "a",
        "link": "a"
      }
    }
  },
  "chapterRule": {
    "title": ".bookname h1",
    "content": "#content",
    "cleanupRules": {
      "remove": [
        "script",
        ".adsbygoogle",
        "#content > p:last-child"
      ],
      "replace": [
        {
          "pattern": "笔趣阁.*最新章节！",
          "replacement": ""
        },
        {
          "pattern": "手机用户请访问.*",
          "replacement": ""
        }
      ]
    }
  }
}